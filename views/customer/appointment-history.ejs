<%- include('../partials/header', { title: 'Appointment History - Classic Cuts' }) %>

<main class="main-content">
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">Appointment History</h1>
            <a href="/customer/dashboard" class="btn btn-outline">‚Üê Back to Dashboard</a>
        </div>

        <% if (appointments && appointments.length > 0) { %>
            <div class="history-container">
                <div class="appointments-list detailed">
                    <% appointments.forEach(appointment => { %>
                        <div class="appointment-card history">
                            <div class="appointment-header">
                                <div class="service-info">
                                    <h3 class="service-name"><%= appointment.service.name %></h3>
                                    <div class="appointment-meta">
                                        <span class="barber-name">with <%= appointment.barber.name %></span>
                                        <span class="appointment-date">
                                            <%= moment(appointment.appointment_date).format('MMM D, YYYY [at] h:mm A') %>
                                        </span>
                                    </div>
                                </div>
                                <div class="appointment-status">
                                    <span class="status-badge <%= appointment.status %>">
                                        <%= appointment.status %>
                                    </span>
                                    <div class="appointment-price">$<%= appointment.total_price %></div>
                                </div>
                            </div>
                            
                            <div class="appointment-details">
                                <div class="detail">
                                    <span class="label">Duration:</span>
                                    <span class="value"><%= appointment.service.duration %> minutes</span>
                                </div>
                                <div class="detail">
                                    <span class="label">Booked on:</span>
                                    <span class="value">
                                        <%= moment(appointment.created_at).format('MMM D, YYYY') %>
                                    </span>
                                </div>
                                <% if (appointment.notes) { %>
                                    <div class="detail">
                                        <span class="label">Notes:</span>
                                        <span class="value"><%= appointment.notes %></span>
                                    </div>
                                <% } %>
                            </div>

                            <div class="appointment-actions">
                                <a href="/appointments/<%= appointment.id %>" class="btn btn-outline btn-small">
                                    View Details
                                </a>
                                
                                <% if (appointment.status === 'completed' && !appointment.rating) { %>
                                    <% if (appointment.canBeRated && appointment.canBeRated()) { %>
                                        <a href="/ratings/<%= appointment.id %>/rate" class="btn btn-primary btn-small">
                                            Rate Service
                                        </a>
                                    <% } %>
                                <% } %>
                                
                                <% if (appointment.rating) { %>
                                    <div class="rating-display">
                                        <div class="rating-stars">
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <span class="star <%= i <= appointment.rating.rating ? 'filled' : '' %>">‚òÖ</span>
                                            <% } %>
                                        </div>
                                        <span class="rating-text">Rated</span>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <div class="pagination">
                        <% if (currentPage > 1) { %>
                            <a href="?page=<%= currentPage - 1 %>" class="pagination-link">Previous</a>
                        <% } %>
                        
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <a href="?page=<%= i %>" 
                               class="pagination-link <%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </a>
                        <% } %>
                        
                        <% if (currentPage < totalPages) { %>
                            <a href="?page=<%= currentPage + 1 %>" class="pagination-link">Next</a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-icon">üìù</div>
                <h3>No Appointment History</h3>
                <p>You haven't booked any appointments yet.</p>
                <a href="/appointments/book" class="btn btn-primary">Book Your First Appointment</a>
            </div>
        <% } %>
    </div>
</main>

<style>
.appointment-card.history {
    margin-bottom: 1.5rem;
}

.appointment-meta {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin-top: 0.5rem;
}

.barber-name {
    color: #6b7280;
    font-size: 0.875rem;
}

.appointment-date {
    color: #374151;
    font-weight: 500;
}

.appointment-status {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
}

.appointment-price {
    font-size: 1.25rem;
    font-weight: 700;
    color: #059669;
}

.appointment-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin: 1rem 0;
    padding: 1rem;
    background: #f8fafc;
    border-radius: 0.5rem;
}

.rating-display {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.rating-stars {
    color: #fbbf24;
}

.rating-text {
    font-size: 0.875rem;
    color: #6b7280;
}

.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    margin-top: 2rem;
}

.pagination-link {
    padding: 0.5rem 1rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    text-decoration: none;
    color: #374151;
    transition: all 0.2s;
}

.pagination-link:hover {
    background: #f3f4f6;
    border-color: #9ca3af;
}

.pagination-link.active {
    background: #3b82f6;
    color: white;
    border-color: #3b82f6;
}

@media (max-width: 768px) {
    .appointment-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    
    .appointment-status {
        align-items: flex-start;
    }
    
    .appointment-details {
        grid-template-columns: 1fr;
    }
}
</style>

<%- include('../partials/footer') %>