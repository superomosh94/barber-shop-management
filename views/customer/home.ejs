<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-grid">
            <div class="hero-content">
                <h1 class="hero-title">
                    Precision Cuts, <br>
                    <span class="text-gold">Traditional Craftsmanship</span>
                </h1>
                <p class="hero-description">
                    Experience the perfect blend of traditional barbering techniques and modern style.
                    Our expert barbers are dedicated to giving you the best grooming experience.
                </p>
                <div class="hero-actions">
                    <% if (user) { %>
                        <a href="/customer/book-appointment" class="btn btn-primary btn-lg">
                            <i class="fas fa-calendar-plus"></i>Book Appointment
                        </a>
                    <% } else { %>
                        <a href="/auth/register" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus"></i>Get Started
                        </a>
                        <a href="/auth/login" class="btn btn-outline btn-lg">
                            <i class="fas fa-sign-in-alt"></i>Sign In
                        </a>
                    <% } %>
                </div>

                <div class="hero-stats">
                    <div class="stat-item">
                        <div class="stat-number">500+</div>
                        <div class="stat-label">Happy Customers</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">15+</div>
                        <div class="stat-label">Years Experience</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">4.9</div>
                        <div class="stat-label">Average Rating</div>
                    </div>
                </div>
            </div>
            <div class="hero-image">
                <div class="image-placeholder">
                    <i class="fas fa-cut hero-icon"></i>
                    <!-- Decorative elements -->
                    <div class="decor-circle decor-1"></div>
                    <div class="decor-circle decor-2"></div>
                    <!-- Barber tools decoration -->
                    <div class="barber-tools">
                        <i class="fas fa-scissors tool-1"></i>
                        <i class="fas fa-comb tool-2"></i>
                        <i class="fas fa-spray-can tool-3"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

