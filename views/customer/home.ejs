<!-- Hero Section -->
<section class="hero-section"
    style="background: linear-gradient(135deg, var(--bg-secondary) 0%, #000000 100%); padding: 6rem 0; position: relative; overflow: hidden;">
    <div class="container">
        <div class="grid grid-2 items-center gap-4">
            <div class="hero-content">
                <h1 style="font-size: 3.5rem; margin-bottom: 1.5rem; line-height: 1.1;">
                    Precision Cuts, <br>
                    <span class="text-gold">Traditional Craftsmanship</span>
                </h1>
                <p style="font-size: 1.25rem; color: var(--text-secondary); margin-bottom: 2.5rem; max-width: 600px;">
                    Experience the perfect blend of traditional barbering techniques and modern style.
                    Our expert barbers are dedicated to giving you the best grooming experience.
                </p>
                <div class="flex gap-2">
                    <% if (user) { %>
                        <a href="/book-appointment" class="btn btn-primary btn-lg">Book Appointment</a>
                        <% } else { %>
                            <a href="/register" class="btn btn-primary btn-lg">Get Started</a>
                            <a href="/login" class="btn btn-outline btn-lg">Sign In</a>
                            <% } %>
                </div>

                <div class="flex gap-4 mt-4">
                    <div class="text-center">
                        <div style="font-size: 2rem; font-weight: 700; color: var(--accent-gold);">500+</div>
                        <div style="font-size: 0.875rem; color: var(--text-muted);">Happy Customers</div>
                    </div>
                    <div class="text-center">
                        <div style="font-size: 2rem; font-weight: 700; color: var(--accent-gold);">15+</div>
                        <div style="font-size: 0.875rem; color: var(--text-muted);">Years Experience</div>
                    </div>
                    <div class="text-center">
                        <div style="font-size: 2rem; font-weight: 700; color: var(--accent-gold);">4.9</div>
                        <div style="font-size: 0.875rem; color: var(--text-muted);">Average Rating</div>
                    </div>
                </div>
            </div>
            <div class="hero-image flex justify-center">
                <div
                    style="width: 100%; max-width: 500px; height: 500px; background: var(--bg-tertiary); border-radius: var(--border-radius-lg); display: flex; align-items: center; justify-content: center; border: 2px dashed var(--accent-gold); position: relative;">
                    <i class="fas fa-cut fa-4x text-gold opacity-50"></i>
                    <!-- Decorative elements -->
                    <div
                        style="position: absolute; top: -20px; right: -20px; width: 100px; height: 100px; background: var(--accent-gold); opacity: 0.1; border-radius: 50%;">
                    </div>
                    <div
                        style="position: absolute; bottom: -30px; left: -30px; width: 150px; height: 150px; background: var(--accent-gold); opacity: 0.05; border-radius: 50%;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

