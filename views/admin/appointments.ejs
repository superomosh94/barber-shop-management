<div class="page-header">
    <h1><i class="fas fa-calendar-check me-2"></i>Appointment Management</h1>
    <p>Manage all customer appointments</p>
</div>

<!-- Filters -->
<div class="card mb-3">
    <div class="card-body">
        <form method="GET" action="/admin/appointments" class="flex gap-2 items-end flex-wrap">
            <div class="form-group mb-0">
                <label class="form-label text-sm">Status</label>
                <select name="status" class="form-control">
                    <option value="all" <%=currentStatus==='all' ? 'selected' : '' %>>All Statuses</option>
                    <option value="pending" <%=currentStatus==='pending' ? 'selected' : '' %>>Pending</option>
                    <option value="confirmed" <%=currentStatus==='confirmed' ? 'selected' : '' %>>Confirmed</option>
                    <option value="completed" <%=currentStatus==='completed' ? 'selected' : '' %>>Completed</option>
                    <option value="cancelled" <%=currentStatus==='cancelled' ? 'selected' : '' %>>Cancelled</option>
                </select>
            </div>
            <div class="form-group mb-0">
                <label class="form-label text-sm">Date</label>
                <input type="date" name="date" class="form-control" value="<%= currentDate || '' %>">
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-filter me-1"></i>Filter
            </button>
            <% if (currentStatus || currentDate) { %>
                <a href="/admin/appointments" class="btn btn-outline">
                    <i class="fas fa-times me-1"></i>Clear
                </a>
                <% } %>
                    <div class="ml-auto">
                        <button type="button" class="btn btn-primary" onclick="openNewAppointmentModal()">
                            <i class="fas fa-plus me-1"></i>New Appointment
                        </button>
                    </div>
        </form>
    </div>
</div>

<!-- Appointments Table -->
<div class="card">
    <div class="card-header flex justify-between items-center">
        <h5 class="mb-0">Appointments (<%= appointments.length %>)</h5>
    </div>
    <div class="card-body p-0">
        <% if (appointments && appointments.length> 0) { %>
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date & Time</th>
                            <th>Customer</th>
                            <th>Service</th>
                            <th>Barber</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% appointments.forEach(appointment=> { %>
                            <tr>
                                <td><strong>#<%= appointment.id %></strong></td>
                                <td>
                                    <div class="flex flex-col">
                                        <span class="font-bold">
                                            <%= moment(appointment.appointment_date).format('MMM DD, YYYY') %>
                                        </span>
                                        <span class="text-sm text-muted">
                                            <%= moment(appointment.appointment_date).format('h:mm A') %>
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <div class="flex items-center gap-2">
                                        <div class="avatar-circle sm">
                                            <%= appointment.customer.name.charAt(0).toUpperCase() %>
                                        </div>
                                        <%= appointment.customer.name %>
                                    </div>
                                </td>
                                <td>
                                    <%= appointment.service.name %>
                                </td>
                                <td>
                                    <%= appointment.barber.name %>
                                </td>
                                <td>$<%= appointment.total_price %>
                                </td>
                                <td>
                                    <span class="badge badge-<%= 
                                        appointment.status === 'confirmed' ? 'success' : 
                                        appointment.status === 'pending' ? 'warning' : 
                                        appointment.status === 'completed' ? 'neutral' : 
                                        appointment.status === 'cancelled' ? 'error' : 'neutral' 
                                    %>">
                                        <%= appointment.status.charAt(0).toUpperCase() + appointment.status.slice(1) %>
                                    </span>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline dropdown-toggle" type="button">
                                            Actions
                                        </button>
                                        <div class="dropdown-menu">
                                            <a href="#" class="dropdown-item"
                                                onclick="viewAppointment(<%= appointment.id %>)">View Details</a>
                                            <a href="#" class="dropdown-item"
                                                onclick="editAppointment(<%= appointment.id %>)">Edit</a>
                                            <div class="dropdown-divider"></div>
                                            <% if (appointment.status==='pending' ) { %>
                                                <a href="#" class="dropdown-item text-success"
                                                    onclick="updateStatus(<%= appointment.id %>, 'confirmed')">Confirm</a>
                                                <% } %>
                                                    <% if (['pending', 'confirmed' ].includes(appointment.status)) { %>
                                                        <a href="#" class="dropdown-item"
                                                            onclick="updateStatus(<%= appointment.id %>, 'completed')">Mark
                                                            Completed</a>
                                                        <a href="#" class="dropdown-item text-danger"
                                                            onclick="updateStatus(<%= appointment.id %>, 'cancelled')">Cancel</a>
                                                        <% } %>
                                                            <div class="dropdown-divider"></div>
                                                            <a href="#" class="dropdown-item text-danger"
                                                                onclick="deleteAppointment(<%= appointment.id %>)">Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages> 1) { %>
                <div class="card-footer">
                    <nav class="pagination-nav">
                        <ul class="pagination">
                            <% if (currentPageNum> 1) { %>
                                <li class="page-item">
                                    <a class="page-link"
                                        href="?page=<%= currentPageNum - 1 %><%= currentStatus ? '&status=' + currentStatus : '' %><%= currentDate ? '&date=' + currentDate : '' %>">
                                        <i class="fas fa-chevron-left"></i> Previous
                                    </a>
                                </li>
                                <% } %>

                                    <% for (let i=1; i <=totalPages; i++) { %>
                                        <li class="page-item <%= i === currentPageNum ? 'active' : '' %>">
                                            <a class="page-link"
                                                href="?page=<%= i %><%= currentStatus ? '&status=' + currentStatus : '' %><%= currentDate ? '&date=' + currentDate : '' %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                        <% } %>

                                            <% if (currentPageNum < totalPages) { %>
                                                <li class="page-item">
                                                    <a class="page-link"
                                                        href="?page=<%= currentPageNum + 1 %><%= currentStatus ? '&status=' + currentStatus : '' %><%= currentDate ? '&date=' + currentDate : '' %>">
                                                        Next <i class="fas fa-chevron-right"></i>
                                                    </a>
                                                </li>
                                                <% } %>
                        </ul>
                    </nav>
                </div>
                <% } %>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No appointments found</p>
                        </div>
                        <% } %>
    </div>
</div>

<!-- New Appointment Modal -->
<div id="appointmentModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">New Appointment</h5>
            <button type="button" class="close" onclick="closeModal('appointmentModal')">&times;</button>
        </div>
        <div class="modal-body">
            <form id="appointmentForm">
                <input type="hidden" name="id" id="appointmentId">
                <div class="form-group">
                    <label class="form-label">Customer</label>
                    <select name="customer_id" class="form-control" required>
                        <option value="">Select Customer</option>
                        <% customers.forEach(customer=> { %>
                            <option value="<%= customer.id %>">
                                <%= customer.name %> (<%= customer.phone %>)
                            </option>
                            <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Service</label>
                    <select name="service_id" class="form-control" required>
                        <option value="">Select Service</option>
                        <% services.forEach(service=> { %>
                            <option value="<%= service.id %>">
                                <%= service.name %> ($<%= service.price %>)
                            </option>
                            <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Barber</label>
                    <select name="barber_id" class="form-control" required>
                        <option value="">Select Barber</option>
                        <% barbers.forEach(barber=> { %>
                            <option value="<%= barber.id %>">
                                <%= barber.name %>
                            </option>
                            <% }); %>
                    </select>
                </div>
                <div class="grid grid-2 gap-2">
                    <div class="form-group">
                        <label class="form-label">Date</label>
                        <input type="date" name="appointment_date" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Time</label>
                        <input type="time" name="appointment_time" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-control">
                        <option value="pending">Pending</option>
                        <option value="confirmed">Confirmed</option>
                        <option value="completed">Completed</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Notes</label>
                    <textarea name="notes" class="form-control" rows="3"></textarea>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-outline" onclick="closeModal('appointmentModal')">Cancel</button>
            <button type="button" class="btn btn-primary" onclick="saveAppointment()">Save Appointment</button>
        </div>
    </div>
</div>

<script>
    function openNewAppointmentModal() {
        document.getElementById('appointmentForm').reset();
        document.getElementById('appointmentId').value = '';
        document.querySelector('#appointmentModal .modal-title').textContent = 'New Appointment';
        document.getElementById('appointmentModal').style.display = 'block';
    }

    function closeModal(modalId) {
        document.getElementById(modalId).style.display = 'none';
    }

    function updateStatus(id, status) {
        if (confirm(`Are you sure you want to mark this appointment as ${status}?`)) {
            fetch(`/admin/api/appointments/${id}/status`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ status })
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error updating status: ' + data.error);
                    }
                });
        }
    }

    function deleteAppointment(id) {
        if (confirm('Are you sure you want to delete this appointment? This action cannot be undone.')) {
            fetch(`/admin/api/appointments/${id}`, {
                method: 'DELETE'
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error deleting appointment: ' + data.error);
                    }
                });
        }
    }

    function saveAppointment() {
        const form = document.getElementById('appointmentForm');
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        const id = data.id;

        const method = id ? 'PUT' : 'POST';
        const url = id ? `/admin/api/appointments/${id}` : '/admin/api/appointments';

        fetch(url, {
            method: method,
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Error saving appointment: ' + data.error);
                }
            });
    }

    // Close modal when clicking outside
    window.onclick = function (event) {
        if (event.target.classList.contains('modal')) {
            event.target.style.display = "none";
        }
    }
</script>