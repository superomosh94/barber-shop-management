<!-- Stats Cards -->
<div class="grid grid-4 gap-3 mb-4">
    <div class="card p-3 border-l-4 border-primary">
        <div class="flex justify-between items-center">
            <div>
                <div class="text-xs font-bold uppercase text-primary mb-1">Total</div>
                <div class="text-2xl font-bold text-primary">
                    <%= appointments.length %>
                </div>
            </div>
            <i class="fas fa-calendar fa-2x text-primary opacity-50"></i>
        </div>
    </div>
    <div class="card p-3 border-l-4 border-warning">
        <div class="flex justify-between items-center">
            <div>
                <div class="text-xs font-bold uppercase text-warning mb-1">Pending</div>
                <div class="text-2xl font-bold text-warning">
                    <%= appointments.filter(a=> a.status === 'pending').length %>
                </div>
            </div>
            <i class="fas fa-clock fa-2x text-warning opacity-50"></i>
        </div>
    </div>
    <div class="card p-3 border-l-4 border-success">
        <div class="flex justify-between items-center">
            <div>
                <div class="text-xs font-bold uppercase text-success mb-1">Confirmed</div>
                <div class="text-2xl font-bold text-success">
                    <%= appointments.filter(a=> a.status === 'confirmed').length %>
                </div>
            </div>
            <i class="fas fa-check-circle fa-2x text-success opacity-50"></i>
        </div>
    </div>
    <div class="card p-3 border-l-4 border-info">
        <div class="flex justify-between items-center">
            <div>
                <div class="text-xs font-bold uppercase text-info mb-1">Completed</div>
                <div class="text-2xl font-bold text-info">
                    <%= appointments.filter(a=> a.status === 'completed').length %>
                </div>
            </div>
            <i class="fas fa-check-double fa-2x text-info opacity-50"></i>
        </div>
    </div>
</div>

<!-- Filters & Actions -->
<div class="card mb-4">
    <div class="card-header flex justify-between items-center">
        <h3 class="card-title">Filters</h3>
        <button class="btn btn-primary" onclick="openModal('newAppointmentModal')">
            <i class="fas fa-plus mr-2"></i> New Appointment
        </button>
    </div>
    <div class="card-body">
        <div class="flex flex-wrap gap-3">
            <div class="flex-1">
                <label class="form-label">Status</label>
                <div class="flex gap-2">
                    <a href="/admin/appointments"
                        class="btn btn-sm <%= !currentStatus ? 'btn-primary' : 'btn-outline' %>">All</a>
                    <a href="/admin/appointments?status=pending"
                        class="btn btn-sm <%= currentStatus === 'pending' ? 'btn-primary' : 'btn-outline' %>">Pending</a>
                    <a href="/admin/appointments?status=confirmed"
                        class="btn btn-sm <%= currentStatus === 'confirmed' ? 'btn-primary' : 'btn-outline' %>">Confirmed</a>
                    <a href="/admin/appointments?status=completed"
                        class="btn btn-sm <%= currentStatus === 'completed' ? 'btn-primary' : 'btn-outline' %>">Completed</a>
                    <a href="/admin/appointments?status=cancelled"
                        class="btn btn-sm <%= currentStatus === 'cancelled' ? 'btn-primary' : 'btn-outline' %>">Cancelled</a>
                </div>
            </div>
            <div class="flex-1">
                <form method="GET" action="/admin/appointments" class="flex gap-2 items-end">
                    <div class="flex-1">
                        <label for="dateFilter" class="form-label">Date</label>
                        <input type="date" class="form-control" name="date" value="<%= currentDate || '' %>"
                            id="dateFilter">
                    </div>
                    <% if (currentStatus) { %>
                        <input type="hidden" name="status" value="<%= currentStatus %>">
                        <% } %>
                            <button type="submit" class="btn btn-primary">Filter</button>
                            <% if (currentDate) { %>
                                <a href="/admin/appointments<% if (currentStatus) { %>?status=<%= currentStatus %><% } %>"
                                    class="btn btn-outline">Clear</a>
                                <% } %>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Appointments List -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Appointments List</h3>
    </div>
    <div class="card-body p-0">
        <% if (appointments.length===0) { %>
            <div class="text-center py-5">
                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                <h4>No Appointments Found</h4>
                <p class="text-muted">
                    <% if (currentStatus || currentDate) { %>
                        No appointments match your current filters.
                        <% } else { %>
                            There are no appointments scheduled yet.
                            <% } %>
                </p>
            </div>
            <% } else { %>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Customer</th>
                                <th>Service</th>
                                <th>Barber</th>
                                <th>Date & Time</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% appointments.forEach(appointment=> { %>
                                <tr>
                                    <td><small class="text-muted">#<%= appointment.id %></small></td>
                                    <td>
                                        <div class="flex items-center gap-2">
                                            <% if (appointment.customer && appointment.customer.avatar) { %>
                                                <img src="<%= appointment.customer.avatar %>"
                                                    class="avatar-sm rounded-full">
                                                <% } else { %>
                                                    <div
                                                        class="avatar-sm rounded-full bg-tertiary flex items-center justify-center text-xs font-bold">
                                                        <%= appointment.customer ? (appointment.customer.first_name
                                                            || 'C' ).charAt(0).toUpperCase() : 'C' %>
                                                    </div>
                                                    <% } %>
                                                        <div>
                                                            <div class="font-medium">
                                                                <%= appointment.customer ?
                                                                    appointment.customer.first_name + ' ' +
                                                                    appointment.customer.last_name : 'Unknown' %>
                                                            </div>
                                                            <div class="text-xs text-muted">
                                                                <%= appointment.customer ? appointment.customer.phone
                                                                    : '' %>
                                                            </div>
                                                        </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="font-medium">
                                            <%= appointment.service ? appointment.service.name : 'Unknown' %>
                                        </div>
                                        <div class="text-xs text-muted">
                                            <%= appointment.service ? appointment.service.duration + ' min' : '' %>
                                        </div>
                                    </td>
                                    <td>
                                        <%= appointment.barber ? appointment.barber.name : 'Unknown' %>
                                    </td>
                                    <td>
                                        <div class="font-medium">
                                            <%= moment(appointment.appointment_date).format('MMM DD, YYYY') %>
                                        </div>
                                        <div class="text-xs text-muted">
                                            <%= moment(appointment.appointment_date).format('h:mm A') %>
                                        </div>
                                    </td>
                                    <td class="font-bold text-gold">$<%= appointment.total_price || (appointment.service
                                            ? appointment.service.price : '0' ) %>
                                    </td>
                                    <td>
                                        <span
                                            class="badge badge-<%= appointment.status === 'confirmed' ? 'success' : (appointment.status === 'pending' ? 'warning' : (appointment.status === 'cancelled' ? 'error' : 'info')) %>">
                                            <%= appointment.status.charAt(0).toUpperCase() + appointment.status.slice(1)
                                                %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="flex gap-1">
                                            <% if (appointment.status==='pending' ) { %>
                                                <button class="btn btn-sm btn-success"
                                                    onclick="updateAppointmentStatus('<%= appointment.id %>', 'confirmed')"
                                                    title="Confirm">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <% } %>
                                                    <% if (appointment.status !=='cancelled' && appointment.status
                                                        !=='completed' ) { %>
                                                        <button class="btn btn-sm btn-danger"
                                                            onclick="updateAppointmentStatus('<%= appointment.id %>', 'cancelled')"
                                                            title="Cancel">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                        <% } %>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <% if (totalPages> 1) { %>
                    <div class="flex justify-center mt-4 mb-4">
                        <div class="btn-group">
                            <% if (currentPageNum> 1) { %>
                                <a href="/admin/appointments?page=<%= currentPageNum - 1 %>"
                                    class="btn btn-outline">Previous</a>
                                <% } %>
                                    <% for(let i=1; i <=totalPages; i++) { %>
                                        <a href="/admin/appointments?page=<%= i %>"
                                            class="btn <%= i === currentPageNum ? 'btn-primary' : 'btn-outline' %>">
                                            <%= i %>
                                        </a>
                                        <% } %>
                                            <% if (currentPageNum < totalPages) { %>
                                                <a href="/admin/appointments?page=<%= currentPageNum + 1 %>"
                                                    class="btn btn-outline">Next</a>
                                                <% } %>
                        </div>
                    </div>
                    <% } %>
                        <% } %>
    </div>
</div>

<!-- New Appointment Modal -->
<div id="newAppointmentModal" class="modal-overlay hidden"
    style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.7); z-index: 1000; display: flex; align-items: center; justify-content: center;">
    <div class="modal-content bg-primary p-4 rounded-lg shadow-lg"
        style="width: 100%; max-width: 600px; max-height: 90vh; overflow-y: auto;">
        <div class="flex justify-between items-center mb-4 border-b border-color pb-2">
            <h3 class="text-xl font-bold">Create New Appointment</h3>
            <button onclick="closeModal('newAppointmentModal')" class="text-muted hover:text-white"><i
                    class="fas fa-times"></i></button>
        </div>

        <form id="newAppointmentForm">
            <div class="grid grid-2 gap-3 mb-3">
                <div class="form-group">
                    <label class="form-label">Customer *</label>
                    <select class="form-control" name="customer_id" required>
                        <option value="">Select Customer</option>
                        <% customers.forEach(customer=> { %>
                            <option value="<%= customer.id %>">
                                <%= customer.first_name %>
                                    <%= customer.last_name %>
                            </option>
                            <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Service *</label>
                    <select class="form-control" name="service_id" required>
                        <option value="">Select Service</option>
                        <% services.forEach(service=> { %>
                            <option value="<%= service.id %>">
                                <%= service.name %> ($<%= service.price %>)
                            </option>
                            <% }); %>
                    </select>
                </div>
            </div>

            <div class="grid grid-2 gap-3 mb-3">
                <div class="form-group">
                    <label class="form-label">Barber *</label>
                    <select class="form-control" name="barber_id" required>
                        <option value="">Select Barber</option>
                        <% barbers.forEach(barber=> { %>
                            <option value="<%= barber.id %>">
                                <%= barber.name %>
                            </option>
                            <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Date *</label>
                    <input type="date" class="form-control" name="appointment_date" required
                        min="<%= new Date().toISOString().split('T')[0] %>">
                </div>
            </div>

            <div class="grid grid-2 gap-3 mb-3">
                <div class="form-group">
                    <label class="form-label">Time *</label>
                    <input type="time" class="form-control" name="appointment_time" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Status *</label>
                    <select class="form-control" name="status" required>
                        <option value="pending">Pending</option>
                        <option value="confirmed">Confirmed</option>
                    </select>
                </div>
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Notes</label>
                <textarea class="form-control" name="notes" rows="3"></textarea>
            </div>

            <div class="flex justify-end gap-2">
                <button type="button" class="btn btn-outline"
                    onclick="closeModal('newAppointmentModal')">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createAppointment()">Create Appointment</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openModal(id) {
        document.getElementById(id).classList.remove('hidden');
    }

    function closeModal(id) {
        document.getElementById(id).classList.add('hidden');
    }

    function updateAppointmentStatus(id, status) {
        if (!confirm('Are you sure?')) return;

        fetch(`/admin/appointments/${id}/status`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ status })
        })
            .then(res => res.json())
            .then(data => {
                if (data.success) location.reload();
                else alert(data.error || 'Error updating status');
            });
    }

    function createAppointment() {
        const form = document.getElementById('newAppointmentForm');
        if (!form.checkValidity()) {
            form.reportValidity();
            return;
        }

        const formData = Object.fromEntries(new FormData(form));

        fetch('/admin/appointments', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(formData)
        })
            .then(res => res.json())
            .then(data => {
                if (data.success) location.reload();
                else alert(data.error || 'Error creating appointment');
            });
    }
</script>