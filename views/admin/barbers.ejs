<div class="page-header">
    <h1><i class="fas fa-cut me-2"></i>Barber Management</h1>
    <p>Manage barbers and their information</p>
</div>

<!-- Barbers Grid -->
<div class="grid grid-3 gap-3">
    <% if (barbers && barbers.length> 0) { %>
        <% barbers.forEach(barber=> { %>
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-circle-lg mb-3"
                        style="width: 100px; height: 100px; margin: 0 auto; font-size: 2.5rem;">
                        <%= barber.name.charAt(0).toUpperCase() %>
                    </div>
                    <h4 class="mb-1">
                        <%= barber.name %>
                    </h4>
                    <p class="text-muted mb-2">
                        <%= barber.specialty || 'General Barber' %>
                    </p>

                    <div class="mb-3">
                        <span class="badge badge-<%= barber.is_active ? 'success' : 'error' %>">
                            <%= barber.is_active ? 'Active' : 'Inactive' %>
                        </span>
                    </div>

                    <% if (barber.bio) { %>
                        <p class="text-sm text-muted mb-3">
                            <%= barber.bio.substring(0, 100) %>
                                <%= barber.bio.length> 100 ? '...' : '' %>
                        </p>
                        <% } %>

                            <div class="grid grid-2 gap-2 mb-3 text-sm">
                                <div>
                                    <strong>Experience:</strong><br>
                                    <%= barber.experience || 'N/A' %> years
                                </div>
                                <div>
                                    <strong>Rating:</strong><br>
                                    <span style="color: #fbbf24;">
                                        <% const rating=barber.rating || 0; %>
                                            <% for(let i=1; i <=5; i++) { %>
                                                <i class="fas fa-star<%= i > rating ? '-o' : '' %>"></i>
                                                <% } %>
                                    </span>
                                </div>
                            </div>

                            <div class="flex gap-2">
                                <button class="btn btn-sm btn-outline flex-1" onclick="viewBarber(<%= barber.id %>)">
                                    <i class="fas fa-eye me-1"></i>View
                                </button>
                                <button class="btn btn-sm btn-primary flex-1" onclick="editBarber(<%= barber.id %>)">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </button>
                            </div>
                </div>
            </div>
            <% }); %>
                <% } else { %>
                    <div class="card" style="grid-column: span 3;">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-cut fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No barbers registered yet</p>
                            <button class="btn btn-primary mt-2" onclick="addBarber()">
                                <i class="fas fa-plus me-1"></i>Add First Barber
                            </button>
                        </div>
                    </div>
                    <% } %>
</div>

<script>
    function viewBarber(id) {
        window.location.href = `/admin/barbers/${id}`;
    }

    function editBarber(id) {
        window.location.href = `/admin/barbers/${id}/edit`;
    }

    function addBarber() {
        window.location.href = '/admin/barbers/new';
    }
</script>

<style>
    .avatar-circle-lg {
        background: linear-gradient(135deg, var(--accent-gold), var(--accent-purple));
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
    }
</style>