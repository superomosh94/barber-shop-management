<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title><%= title %></title>
    <style>
        .service-card {
            transition: transform 0.2s;
            height: 100%;
        }
        .service-card:hover {
            transform: translateY(-5px);
        }
        .service-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin: 0 auto 1rem;
        }
        .status-badge {
            font-size: 0.75rem;
        }
        .action-buttons .btn {
            margin-right: 5px;
            margin-bottom: 5px;
        }
        .stats-card {
            border-left: 4px solid;
        }
        .stats-card.total {
            border-left-color: #0d6efd;
        }
        .stats-card.active {
            border-left-color: #198754;
        }
        .stats-card.inactive {
            border-left-color: #6c757d;
        }
        .price-tag {
            font-size: 1.25rem;
            font-weight: bold;
            color: #198754;
        }
        .duration-badge {
            background-color: #e9ecef;
            color: #495057;
        }
        .description-text {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        .table th {
            border-top: none;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/admin-sidebar') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <!-- Header -->
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="fas fa-concierge-bell"></i>
                        Service Management
                    </h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#newServiceModal">
                            <i class="fas fa-plus"></i>
                            Add New Service
                        </button>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-xl-3 col-md-6">
                        <div class="card stats-card total mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <div class="text-xs font-weight-bold text-uppercase mb-1 text-primary">Total Services</div>
                                        <div class="h5 mb-0 text-primary"><%= services.length %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-concierge-bell fa-2x text-primary"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card stats-card active mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <div class="text-xs font-weight-bold text-uppercase mb-1 text-success">Active</div>
                                        <div class="h5 mb-0 text-success">
                                            <%= services.filter(s => s.is_active).length %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-check-circle fa-2x text-success"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card stats-card inactive mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <div class="text-xs font-weight-bold text-uppercase mb-1 text-secondary">Inactive</div>
                                        <div class="h5 mb-0 text-secondary">
                                            <%= services.filter(s => !s.is_active).length %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-times-circle fa-2x text-secondary"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card bg-info text-white mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <div class="text-xs font-weight-bold text-uppercase mb-1">Avg. Price</div>
                                        <div class="h5 mb-0">
                                            <% 
                                                const activeServices = services.filter(s => s.is_active);
                                                const avgPrice = activeServices.length > 0 
                                                    ? (activeServices.reduce((sum, service) => sum + parseFloat(service.price), 0) / activeServices.length).toFixed(2)
                                                    : '0.00';
                                            %>
                                            $<%= avgPrice %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-dollar-sign fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Services List -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-list"></i>
                            Services List
                            <span class="badge bg-secondary ms-2"><%= services.length %> services</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (services.length === 0) { %>
                            <div class="text-center py-5">
                                <i class="fas fa-concierge-bell fa-3x text-muted mb-3"></i>
                                <h4>No Services Found</h4>
                                <p class="text-muted">There are no services in the system yet.</p>
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newServiceModal">
                                    <i class="fas fa-plus"></i>
                                    Add First Service
                                </button>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Service Name</th>
                                            <th>Description</th>
                                            <th>Price</th>
                                            <th>Duration</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% services.forEach(service => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= service.name %></strong>
                                                </td>
                                                <td>
                                                    <% if (service.description) { %>
                                                        <span class="description-text"><%= service.description %></span>
                                                    <% } else { %>
                                                        <span class="text-muted">No description</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <span class="price-tag">$<%= service.price %></span>
                                                </td>
                                                <td>
                                                    <span class="badge duration-badge">
                                                        <%= service.duration %> minutes
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge <%= service.is_active ? 'bg-success' : 'bg-secondary' %> status-badge">
                                                        <%= service.is_active ? 'Active' : 'Inactive' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="action-buttons">
                                                        <% if (service.is_active) { %>
                                                            <button class="btn btn-sm btn-warning" onclick="toggleServiceStatus(<%= service.id %>, false)" title="Deactivate">
                                                                <i class="fas fa-pause"></i>
                                                            </button>
                                                        <% } else { %>
                                                            <button class="btn btn-sm btn-success" onclick="toggleServiceStatus(<%= service.id %>, true)" title="Activate">
                                                                <i class="fas fa-play"></i>
                                                            </button>
                                                        <% } %>
                                                        <button class="btn btn-sm btn-primary" onclick="editService(<%= service.id %>)" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-danger" onclick="deleteService(<%= service.id %>)" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- New Service Modal -->
    <div class="modal fade" id="newServiceModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Service</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="newServiceForm">
                        <div class="mb-3">
                            <label class="form-label">Service Name *</label>
                            <input type="text" class="form-control" name="name" required placeholder="e.g., Haircut, Shave, Styling">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="description" rows="3" placeholder="Describe this service..."></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Price ($) *</label>
                                    <input type="number" class="form-control" name="price" required min="0" step="0.01" placeholder="25.00">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Duration (minutes) *</label>
                                    <input type="number" class="form-control" name="duration" required min="5" max="300" placeholder="30">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <select class="form-select" name="is_active">
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="createService()">
                        <i class="fas fa-plus"></i> Add Service
                    </button>
                </div>
            </div>
        </div>
    </div>

