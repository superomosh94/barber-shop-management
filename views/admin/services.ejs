<div class="page-header">
    <h1><i class="fas fa-cut me-2"></i>Service Management</h1>
    <p>Manage services and pricing</p>
</div>

<!-- Services Grid -->
<div class="grid grid-3 gap-3">
    <% if (services && services.length> 0) { %>
        <% services.forEach(service=> { %>
            <div class="card">
                <div class="card-body">
                    <div class="flex justify-between items-start mb-3">
                        <h4 class="mb-0">
                            <%= service.name %>
                        </h4>
                        <span class="badge badge-<%= service.is_active ? 'success' : 'error' %>">
                            <%= service.is_active ? 'Active' : 'Inactive' %>
                        </span>
                    </div>

                    <div class="price-tag mb-3">
                        $<%= service.price %>
                            <span class="text-sm text-muted ml-2">
                                <%= service.duration %> mins
                            </span>
                    </div>

                    <p class="text-muted mb-4 text-sm" style="min-height: 40px;">
                        <%= service.description || 'No description available' %>
                    </p>

                    <div class="flex gap-2">
                        <button class="btn btn-sm btn-outline flex-1"
                            onclick="editService(<%= JSON.stringify(service) %>)">
                            <i class="fas fa-edit me-1"></i>Edit
                        </button>
                        <button class="btn btn-sm btn-outline-danger flex-1" onclick="deleteService(<%= service.id %>)">
                            <i class="fas fa-trash me-1"></i>Delete
                        </button>
                    </div>
                </div>
            </div>
            <% }); %>

                <!-- Add New Service Card -->
                <div class="card border-dashed flex items-center justify-center p-5 cursor-pointer hover-bg-tertiary"
                    onclick="openServiceModal()">
                    <div class="text-center">
                        <div class="avatar-circle mb-3 bg-tertiary text-primary mx-auto">
                            <i class="fas fa-plus"></i>
                        </div>
                        <h4>Add New Service</h4>
                    </div>
                </div>
                <% } else { %>
                    <div class="card col-span-3">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-cut fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No services available</p>
                            <button class="btn btn-primary mt-2" onclick="openServiceModal()">
                                <i class="fas fa-plus me-1"></i>Add First Service
                            </button>
                        </div>
                    </div>
                    <% } %>
</div>

<!-- Service Modal -->
<div id="serviceModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Add Service</h5>
            <button type="button" class="close" onclick="closeModal('serviceModal')">&times;</button>
        </div>
        <div class="modal-body">
            <form id="serviceForm">
                <input type="hidden" name="id" id="serviceId">
                <div class="form-group">
                    <label class="form-label">Service Name</label>
                    <input type="text" name="name" class="form-control" required>
                </div>
                <div class="grid grid-2 gap-2">
                    <div class="form-group">
                        <label class="form-label">Price ($)</label>
                        <input type="number" name="price" class="form-control" step="0.01" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Duration (mins)</label>
                        <input type="number" name="duration" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Description</label>
                    <textarea name="description" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label class="flex items-center gap-2 cursor-pointer">
                        <input type="checkbox" name="is_active" checked>
                        <span>Active Service</span>
                    </label>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-outline" onclick="closeModal('serviceModal')">Cancel</button>
            <button type="button" class="btn btn-primary" onclick="saveService()">Save Service</button>
        </div>
    </div>
</div>

<script>
    function openServiceModal() {
        document.getElementById('serviceForm').reset();
        document.getElementById('serviceId').value = '';
        document.querySelector('#serviceModal .modal-title').textContent = 'Add Service';
        document.getElementById('serviceModal').style.display = 'block';
    }

    function editService(service) {
        document.getElementById('serviceId').value = service.id;
        document.querySelector('input[name="name"]').value = service.name;
        document.querySelector('input[name="price"]').value = service.price;
        document.querySelector('input[name="duration"]').value = service.duration;
        document.querySelector('textarea[name="description"]').value = service.description || '';
        document.querySelector('input[name="is_active"]').checked = service.is_active;

        document.querySelector('#serviceModal .modal-title').textContent = 'Edit Service';
        document.getElementById('serviceModal').style.display = 'block';
    }

    function closeModal(modalId) {
        document.getElementById(modalId).style.display = 'none';
    }

    function saveService() {
        const form = document.getElementById('serviceForm');
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        data.is_active = form.querySelector('input[name="is_active"]').checked;

        const id = data.id;
        const method = id ? 'PUT' : 'POST';
        const url = id ? `/admin/api/services/${id}` : '/admin/api/services';

        fetch(url, {
            method: method,
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Error saving service: ' + (data.error || 'Unknown error'));
                }
            });
    }

    function deleteService(id) {
        if (confirm('Are you sure you want to delete this service?')) {
            fetch(`/admin/api/services/${id}`, {
                method: 'DELETE'
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error deleting service: ' + (data.error || 'Unknown error'));
                    }
                });
        }
    }

    // Close modal when clicking outside
    window.onclick = function (event) {
        if (event.target.classList.contains('modal')) {
            event.target.style.display = "none";
        }
    }
</script>

<style>
    .price-tag {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--accent-gold);
    }

    .border-dashed {
        border: 2px dashed var(--border-color);
        background: transparent;
    }

    .hover-bg-tertiary:hover {
        background-color: var(--bg-tertiary);
    }
</style>