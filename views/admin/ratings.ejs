<div class="page-header">
    <h1><i class="fas fa-star me-2"></i>Rating Management</h1>
    <p>Manage customer reviews and ratings</p>
</div>

<!-- Filters -->
<div class="card mb-3">
    <div class="card-body">
        <form method="GET" action="/admin/ratings" class="flex gap-2">
            <select name="approved" class="form-control" style="max-width: 200px;" onchange="this.form.submit()">
                <option value="">All Ratings</option>
                <option value="true" <%=currentFilter==='true' ? 'selected' : '' %>>Approved</option>
                <option value="false" <%=currentFilter==='false' ? 'selected' : '' %>>Pending Approval</option>
            </select>
        </form>
    </div>
</div>

<!-- Ratings List -->
<div class="grid gap-3">
    <% if (ratings && ratings.length> 0) { %>
        <% ratings.forEach(rating=> { %>
            <div class="card">
                <div class="card-body">
                    <div class="flex justify-between items-start mb-3">
                        <div class="flex items-center gap-3">
                            <div class="avatar-circle">
                                <%= rating.customer.name.charAt(0).toUpperCase() %>
                            </div>
                            <div>
                                <h5 class="mb-0">
                                    <%= rating.customer.name %>
                                </h5>
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    <%= moment(rating.created_at).fromNow() %>
                                </small>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="rating-stars mb-1" style="color: #fbbf24; font-size: 1.2rem;">
                                <% for(let i=1; i <=5; i++) { %>
                                    <i class="fas fa-star<%= i > rating.rating ? '-o' : '' %>"></i>
                                    <% } %>
                            </div>
                            <span class="badge badge-<%= rating.is_approved ? 'success' : 'warning' %>">
                                <%= rating.is_approved ? 'Approved' : 'Pending' %>
                            </span>
                        </div>
                    </div>

                    <div class="rating-content mb-3 p-3 bg-tertiary rounded">
                        <p class="mb-2"><strong>Review:</strong>
                            <%= rating.review || 'No written review' %>
                        </p>
                        <div class="text-sm text-muted border-t pt-2 mt-2">
                            <span><i class="fas fa-cut me-1"></i>Service: <%= rating.appointment.service.name %></span>
                            <span class="mx-2">â€¢</span>
                            <span><i class="fas fa-user-tie me-1"></i>Barber: <%= rating.barber.name %></span>
                        </div>
                    </div>

                    <div class="flex justify-end gap-2">
                        <% if (!rating.is_approved) { %>
                            <button class="btn btn-sm btn-success" onclick="updateApproval(<%= rating.id %>, true)">
                                <i class="fas fa-check me-1"></i>Approve
                            </button>
                            <% } else { %>
                                <button class="btn btn-sm btn-warning"
                                    onclick="updateApproval(<%= rating.id %>, false)">
                                    <i class="fas fa-ban me-1"></i>Unapprove
                                </button>
                                <% } %>
                    </div>
                </div>
            </div>
            <% }); %>

                <!-- Pagination -->
                <% if (totalPages> 1) { %>
                    <div class="card">
                        <div class="card-body">
                            <nav class="pagination-nav">
                                <ul class="pagination justify-center mb-0">
                                    <% if (currentPage> 1) { %>
                                        <li class="page-item">
                                            <a class="page-link"
                                                href="?page=<%= currentPage - 1 %><%= currentFilter ? '&approved=' + currentFilter : '' %>">
                                                <i class="fas fa-chevron-left"></i> Previous
                                            </a>
                                        </li>
                                        <% } %>

                                            <% for (let i=1; i <=totalPages; i++) { %>
                                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                    <a class="page-link"
                                                        href="?page=<%= i %><%= currentFilter ? '&approved=' + currentFilter : '' %>">
                                                        <%= i %>
                                                    </a>
                                                </li>
                                                <% } %>

                                                    <% if (currentPage < totalPages) { %>
                                                        <li class="page-item">
                                                            <a class="page-link"
                                                                href="?page=<%= currentPage + 1 %><%= currentFilter ? '&approved=' + currentFilter : '' %>">
                                                                Next <i class="fas fa-chevron-right"></i>
                                                            </a>
                                                        </li>
                                                        <% } %>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <% } %>
                        <% } else { %>
                            <div class="card">
                                <div class="card-body text-center py-5">
                                    <i class="fas fa-star fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No ratings found</p>
                                </div>
                            </div>
                            <% } %>
</div>

<script>
    function updateApproval(id, approved) {
        fetch(`/admin/api/ratings/${id}/approval`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ is_approved: approved ? 'true' : 'false' })
        })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Error updating rating: ' + data.error);
                }
            });
    }
</script>