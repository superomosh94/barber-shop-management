<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title><%= title %></title>
    <style>
        .admin-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
        }
        .avatar-placeholder {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            font-weight: bold;
            color: white;
        }
        .status-badge {
            font-size: 0.75rem;
        }
        .role-badge {
            font-size: 0.7rem;
        }
        .action-buttons .btn {
            margin-right: 5px;
            margin-bottom: 5px;
        }
        .stats-card {
            border-left: 4px solid;
        }
        .stats-card.total {
            border-left-color: #0d6efd;
        }
        .stats-card.active {
            border-left-color: #198754;
        }
        .stats-card.inactive {
            border-left-color: #6c757d;
        }
        .permission-tag {
            font-size: 0.65rem;
            margin-right: 3px;
            margin-bottom: 3px;
        }
        .table th {
            border-top: none;
            font-weight: 600;
        }
        .last-login {
            font-size: 0.8rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/admin-sidebar') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <!-- Header -->
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="fas fa-user-shield"></i>
                        Admin Management
                    </h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#newAdminModal">
                            <i class="fas fa-plus"></i>
                            Add New Admin
                        </button>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-xl-3 col-md-6">
                        <div class="card stats-card total mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <div class="text-xs font-weight-bold text-uppercase mb-1 text-primary">Total Admins</div>
                                        <div class="h5 mb-0 text-primary"><%= admins.length %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-user-shield fa-2x text-primary"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card stats-card active mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <div class="text-xs font-weight-bold text-uppercase mb-1 text-success">Active</div>
                                        <div class="h5 mb-0 text-success">
                                            <%= admins.filter(a => a.is_active).length %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-check-circle fa-2x text-success"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card stats-card inactive mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <div class="text-xs font-weight-bold text-uppercase mb-1 text-secondary">Inactive</div>
                                        <div class="h5 mb-0 text-secondary">
                                            <%= admins.filter(a => !a.is_active).length %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-times-circle fa-2x text-secondary"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card bg-info text-white mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <div class="text-xs font-weight-bold text-uppercase mb-1">Roles</div>
                                        <div class="h5 mb-0">
                                            <% 
                                                const roles = [...new Set(admins.map(a => a.role))];
                                            %>
                                            <%= roles.length %>
                                        </div>
                                        <div class="mt-1">
                                            <small><%= roles.join(', ') %></small>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-users-cog fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Admins List -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-list"></i>
                            Administrators List
                            <span class="badge bg-secondary ms-2"><%= admins.length %> admins</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (admins.length === 0) { %>
                            <div class="text-center py-5">
                                <i class="fas fa-user-shield fa-3x text-muted mb-3"></i>
                                <h4>No Administrators Found</h4>
                                <p class="text-muted">There are no administrators in the system yet.</p>
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newAdminModal">
                                    <i class="fas fa-plus"></i>
                                    Add First Administrator
                                </button>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Admin</th>
                                            <th>Username/Email</th>
                                            <th>Role</th>
                                            <th>Permissions</th>
                                            <th>Status</th>
                                            <th>Last Login</th>
                                            <th>Created</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% admins.forEach(admin => { %>
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-placeholder bg-primary me-3">
                                                            <%= (admin.first_name || admin.username).charAt(0).toUpperCase() %>
                                                        </div>
                                                        <div>
                                                            <strong>
                                                                <%= admin.first_name %> <%= admin.last_name %>
                                                            </strong>
                                                            <br>
                                                            <small class="text-muted">
                                                                <%= admin.username %>
                                                            </small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div>
                                                        <strong><%= admin.username %></strong>
                                                        <br>
                                                        <small class="text-muted"><%= admin.email %></small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge 
                                                        <% if (admin.role === 'super_admin') { %>bg-danger<% } %>
                                                        <% if (admin.role === 'admin') { %>bg-primary<% } %>
                                                        <% if (admin.role === 'manager') { %>bg-warning<% } %>
                                                        <% if (admin.role === 'viewer') { %>bg-info<% } %>
                                                        role-badge">
                                                        <%= admin.role.replace('_', ' ').toUpperCase() %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <% if (admin.permissions) { %>
                                                        <% const perms = typeof admin.permissions === 'string' ? admin.permissions.split(',') : admin.permissions; %>
                                                        <% perms.slice(0, 3).forEach(perm => { %>
                                                            <span class="badge bg-light text-dark permission-tag">
                                                                <%= perm.trim() %>
                                                            </span>
                                                        <% }); %>
                                                        <% if (perms.length > 3) { %>
                                                            <span class="badge bg-secondary permission-tag">
                                                                +<%= perms.length - 3 %> more
                                                            </span>
                                                        <% } %>
                                                    <% else { %>
                                                        <span class="text-muted">No permissions</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <span class="badge <%= admin.is_active ? 'bg-success' : 'bg-secondary' %> status-badge">
                                                        <%= admin.is_active ? 'Active' : 'Inactive' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <% if (admin.last_login) { %>
                                                        <span class="last-login text-muted">
                                                            <%= moment(admin.last_login).fromNow() %>
                                                        </span>
                                                    <% } else { %>
                                                        <span class="text-muted">Never</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <%= moment(admin.created_at).format('MMM DD, YYYY') %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <div class="action-buttons">
                                                        <% if (admin.is_active) { %>
                                                            <button class="btn btn-sm btn-warning" onclick="toggleAdminStatus(<%= admin.id %>, false)" title="Deactivate">
                                                                <i class="fas fa-pause"></i>
                                                            </button>
                                                        <% } else { %>
                                                            <button class="btn btn-sm btn-success" onclick="toggleAdminStatus(<%= admin.id %>, true)" title="Activate">
                                                                <i class="fas fa-play"></i>
                                                            </button>
                                                        <% } %>
                                                        
                                                        <% if (admin.id !== req.session.admin.id) { %>
                                                            <button class="btn btn-sm btn-primary" onclick="editAdmin(<%= admin.id %>)" title="Edit">
                                                                <i class="fas fa-edit"></i>
                                                            </button>
                                                            <button class="btn btn-sm btn-info" onclick="viewAdmin(<%= admin.id %>)" title="View Details">
                                                                <i class="fas fa-eye"></i>
                                                            </button>
                                                            <button class="btn btn-sm btn-danger" onclick="deleteAdmin(<%= admin.id %>)" title="Delete">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        <% } else { %>
                                                            <button class="btn btn-sm btn-outline-primary" disabled title="Current User">
                                                                <i class="fas fa-user"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- New Admin Modal -->
    <div class="modal fade" id="newAdminModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Administrator</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="newAdminForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">First Name *</label>
                                    <input type="text" class="form-control" name="first_name" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Last Name *</label>
                                    <input type="text" class="form-control" name="last_name" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Username *</label>
                                    <input type="text" class="form-control" name="username" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email Address *</label>
                                    <input type="email" class="form-control" name="email" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Password *</label>
                                    <input type="password" class="form-control" name="password" required minlength="6">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Confirm Password *</label>
                                    <input type="password" class="form-control" name="confirm_password" required minlength="6">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Role *</label>
                                    <select class="form-select" name="role" required>
                                        <option value="">Select Role</option>
                                        <option value="super_admin">Super Administrator</option>
                                        <option value="admin">Administrator</option>
                                        <option value="manager">Manager</option>
                                        <option value="viewer">Viewer</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" name="is_active">
                                        <option value="true">Active</option>
                                        <option value="false">Inactive</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Permissions</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="permissions" value="dashboard" id="permDashboard">
                                        <label class="form-check-label" for="permDashboard">Dashboard Access</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="permissions" value="appointments" id="permAppointments">
                                        <label class="form-check-label" for="permAppointments">Appointment Management</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="permissions" value="customers" id="permCustomers">
                                        <label class="form-check-label" for="permCustomers">Customer Management</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="permissions" value="barbers" id="permBarbers">
                                        <label class="form-check-label" for="permBarbers">Barber Management</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="permissions" value="services" id="permServices">
                                        <label class="form-check-label" for="permServices">Service Management</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="permissions" value="ratings" id="permRatings">
                                        <label class="form-check-label" for="permRatings">Rating Management</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="permissions" value="reports" id="permReports">
                                        <label class="form-check-label" for="permReports">Reports Access</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="permissions" value="admins" id="permAdmins">
                                        <label class="form-check-label" for="permAdmins">Admin Management</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="createAdmin()">
                        <i class="fas fa-plus"></i> Create Admin
                    </button>
                </div>
            </div>
        </div>
    </div>

