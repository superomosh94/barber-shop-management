<div class="card">
    <div class="flex justify-between items-center mb-2">
        <h3 class="mb-0">Administrators List</h3>
        <button class="btn btn-primary" onclick="new bootstrap.Modal(document.getElementById('newAdminModal')).show()">
            <i class="fas fa-plus"></i> Add New Admin
        </button>
    </div>

    <% if (admins.length===0) { %>
        <div class="text-center py-3">
            <p>No administrators found.</p>
        </div>
        <% } else { %>
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Admin</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% admins.forEach(admin=> { %>
                            <tr>
                                <td>
                                    <div class="flex items-center gap-2">
                                        <div class="avatar-circle"
                                            style="width: 32px; height: 32px; background: var(--bg-tertiary); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                            <%= (admin.first_name || admin.username).charAt(0).toUpperCase() %>
                                        </div>
                                        <div>
                                            <div style="font-weight: 600;">
                                                <%= admin.first_name %>
                                                    <%= admin.last_name %>
                                            </div>
                                            <div style="font-size: 0.75rem; color: var(--text-muted);">
                                                <%= admin.email %>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-neutral">
                                        <%= admin.role %>
                                    </span>
                                </td>
                                <td>
                                    <span class="badge badge-<%= admin.is_active ? 'success' : 'neutral' %>">
                                        <%= admin.is_active ? 'Active' : 'Inactive' %>
                                    </span>
                                </td>
                                <td>
                                    <%= moment(admin.created_at).format('MMM DD, YYYY') %>
                                </td>
                                <td>
                                    <div class="flex gap-2">
                                        <% if (admin.id !==req.session.admin.id) { %>
                                            <button class="btn btn-outline" style="padding: 0.25rem 0.5rem;"
                                                onclick="deleteAdmin(<%= admin.id %>)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            <% } %>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% } %>
</div>

<!-- New Admin Modal (Simplified for styling demo, logic remains similar) -->
<div class="modal fade" id="newAdminModal" tabindex="-1" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content card">
            <div class="modal-header flex justify-between items-center mb-2">
                <h5 class="modal-title">Add New Administrator</h5>
                <button type="button" class="btn-close"
                    onclick="bootstrap.Modal.getInstance(document.getElementById('newAdminModal')).hide()">X</button>
            </div>
            <div class="modal-body">
                <form id="newAdminForm">
                    <div class="form-group">
                        <label class="form-label">Username</label>
                        <input type="text" class="form-control" name="username" required>
                    </div>
                    <!-- Add other fields as needed -->
                </form>
            </div>
            <div class="modal-footer flex justify-end gap-2 mt-2">
                <button type="button" class="btn btn-outline"
                    onclick="bootstrap.Modal.getInstance(document.getElementById('newAdminModal')).hide()">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createAdmin()">Create</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Re-implement createAdmin and deleteAdmin logic here or in a separate script file
    function deleteAdmin(id) {
        if (confirm('Delete this admin?')) {
            fetch(`/admin/api/admins/${id}`, { method: 'DELETE' })
                .then(res => res.json())
                .then(data => {
                    if (data.success) location.reload();
                    else alert(data.error);
                });
        }
    }
</script>