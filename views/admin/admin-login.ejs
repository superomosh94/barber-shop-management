<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Admin Login - Classic Cuts' %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="admin-auth-body">
    <div class="auth-container admin-auth">
        <div class="auth-card admin-auth-card">
            <div class="auth-header">
                <div class="admin-logo">
                    <span class="logo-icon">✂️</span>
                    <span class="logo-text">Classic Cuts</span>
                </div>
                <h1 class="auth-title">Admin Portal</h1>
                <p class="auth-subtitle">Sign in to access the dashboard</p>
            </div>

            <!-- Flash Messages -->
            <% if (success && success.length > 0) { %>
                <div class="flash-messages">
                    <% success.forEach(function(message) { %>
                        <div class="flash-message flash-success">
                            <span class="flash-text"><%= message %></span>
                        </div>
                    <% }) %>
                </div>
            <% } %>

            <% if (error && error.length > 0) { %>
                <div class="flash-messages">
                    <% error.forEach(function(message) { %>
                        <div class="flash-message flash-error">
                            <span class="flash-text"><%= message %></span>
                        </div>
                    <% }) %>
                </div>
            <% } %>

            <form action="/admin/login" method="POST" class="auth-form">
                <div class="form-group">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-primary btn-full">Sign In</button>
            </form>

            <div class="auth-footer">
                <p><a href="/" class="auth-link">← Back to Main Site</a></p>
            </div>
        </div>
    </div>
</body>
</html>