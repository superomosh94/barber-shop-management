<div class="page-header">
    <h1><i class="fas fa-user-circle me-2"></i>My Profile</h1>
    <p>Manage your account settings</p>
</div>

<div class="grid grid-2 gap-3">
    <!-- Profile Information -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Profile Information</h5>
        </div>
        <div class="card-body">
            <form id="profileForm">
                <div class="grid grid-2 gap-2">
                    <div class="form-group">
                        <label class="form-label">First Name</label>
                        <input type="text" name="first_name" class="form-control" value="<%= adminData.first_name %>"
                            required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Last Name</label>
                        <input type="text" name="last_name" class="form-control" value="<%= adminData.last_name %>"
                            required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Email Address</label>
                    <input type="email" name="email" class="form-control" value="<%= adminData.email %>" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" value="<%= adminData.username %>" disabled>
                    <small class="text-muted">Username cannot be changed</small>
                </div>
                <div class="form-group">
                    <label class="form-label">Role</label>
                    <input type="text" class="form-control"
                        value="<%= adminData.role.charAt(0).toUpperCase() + adminData.role.slice(1) %>" disabled>
                </div>
            </form>
        </div>
    </div>

    <!-- Change Password -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Change Password</h5>
        </div>
        <div class="card-body">
            <form id="passwordForm">
                <div class="form-group">
                    <label class="form-label">Current Password</label>
                    <input type="password" name="current_password" class="form-control">
                </div>
                <div class="form-group">
                    <label class="form-label">New Password</label>
                    <input type="password" name="new_password" class="form-control">
                </div>
                <div class="form-group">
                    <label class="form-label">Confirm New Password</label>
                    <input type="password" name="confirm_password" class="form-control">
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card mt-3">
    <div class="card-body text-right">
        <button type="button" class="btn btn-primary" onclick="saveProfile()">
            <i class="fas fa-save me-1"></i>Save Changes
        </button>
    </div>
</div>

<script>
    function saveProfile() {
        const profileForm = document.getElementById('profileForm');
        const passwordForm = document.getElementById('passwordForm');

        const profileData = Object.fromEntries(new FormData(profileForm).entries());
        const passwordData = Object.fromEntries(new FormData(passwordForm).entries());

        // Validation
        if (passwordData.new_password) {
            if (!passwordData.current_password) {
                alert('Please enter your current password to change it.');
                return;
            }
            if (passwordData.new_password !== passwordData.confirm_password) {
                alert('New passwords do not match.');
                return;
            }
        }

        const data = { ...profileData, ...passwordData };

        fetch('/admin/api/profile', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert('Profile updated successfully');
                    location.reload();
                } else {
                    alert('Error updating profile: ' + data.error);
                }
            });
    }
</script>