<div class="customer-sidebar">
    <!-- Sidebar Header with User Info -->
    <div class="sidebar-header">
        <div class="user-info">
            <div class="user-avatar">
                <i class="fas fa-user-circle"></i>
            </div>
            <div class="user-details">
                <h6 class="mb-0"><%= user.name %></h6>
                <small class="text-muted"><%= user.email %></small>
            </div>
        </div>
    </div>

    <!-- Navigation Menu -->
    <div class="sidebar-menu">
        <ul class="nav flex-column">
            <!-- Dashboard -->
            <li class="nav-item">
                <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>" 
                   href="/customer/dashboard">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    Dashboard
                    <% if (typeof pendingAppointmentsCount !== 'undefined' && pendingAppointmentsCount > 0) { %>
                        <span class="badge bg-warning float-end"><%= pendingAppointmentsCount %></span>
                    <% } %>
                </a>
            </li>

            <!-- Book Appointment -->
            <li class="nav-item">
                <a class="nav-link" href="/booking">
                    <i class="fas fa-calendar-plus me-2"></i>
                    Book Appointment
                </a>
            </li>

            <!-- Appointment History -->
            <li class="nav-item">
                <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'history' ? 'active' : '' %>" 
                   href="/customer/appointment-history">
                    <i class="fas fa-history me-2"></i>
                    My Appointments
                </a>
            </li>

            <!-- Profile -->
            <li class="nav-item">
                <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'profile' ? 'active' : '' %>" 
                   href="/customer/profile">
                    <i class="fas fa-user me-2"></i>
                    My Profile
                </a>
            </li>

            <!-- Change Password -->
            <li class="nav-item">
                <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'password' ? 'active' : '' %>" 
                   href="/customer/change-password">
                    <i class="fas fa-lock me-2"></i>
                    Change Password
                </a>
            </li>

            <!-- Divider -->
            <li class="nav-item">
                <hr class="sidebar-divider">
            </li>

            <!-- Services -->
            <li class="nav-item">
                <a class="nav-link" href="/services">
                    <i class="fas fa-cut me-2"></i>
                    Our Services
                </a>
            </li>

            <!-- Barbers -->
            <li class="nav-item">
                <a class="nav-link" href="/barbers">
                    <i class="fas fa-user-tie me-2"></i>
                    Our Barbers
                </a>
            </li>

            <!-- Divider -->
            <li class="nav-item">
                <hr class="sidebar-divider">
            </li>

            <!-- Support -->
            <li class="nav-item">
                <a class="nav-link" href="/contact">
                    <i class="fas fa-headset me-2"></i>
                    Contact Support
                </a>
            </li>

            <!-- Logout -->
            <li class="nav-item">
                <a class="nav-link text-danger" href="/auth/logout">
                    <i class="fas fa-sign-out-alt me-2"></i>
                    Logout
                </a>
            </li>
        </ul>
    </div>

    <!-- Quick Stats Footer -->
    <div class="sidebar-footer">
        <div class="quick-stats">
            <div class="stat-item">
                <small class="text-muted">Total Appointments</small>
                <div class="stat-number">
                    <% if (typeof stats !== 'undefined' && stats.totalAppointments) { %>
                        <%= stats.totalAppointments %>
                    <% } else { %>
                        0
                    <% } %>
                </div>
            </div>
            <div class="stat-item">
                <small class="text-muted">Completed</small>
                <div class="stat-number text-success">
                    <% if (typeof stats !== 'undefined' && stats.completedAppointments) { %>
                        <%= stats.completedAppointments %>
                    <% } else { %>
                        0
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

