<nav class="navbar">
    <div class="nav-container">
        <!-- Logo -->
        <div class="nav-logo">
            <a href="/" class="logo-link">
                <i class="fas fa-cut logo-icon"></i>
                <span class="logo-text">Classic Cuts</span>
            </a>
        </div>

        <!-- Navigation Menu -->
        <div class="nav-menu" id="navMenu">
            <a href="/" class="nav-link <%= currentUrl === '/' ? 'active' : '' %>">
                <i class="fas fa-home nav-icon"></i>
                <span>Home</span>
            </a>
            <a href="/services" class="nav-link <%= currentUrl.includes('/services') ? 'active' : '' %>">
                <i class="fas fa-concierge-bell nav-icon"></i>
                <span>Services</span>
            </a>
            <a href="/barbers" class="nav-link <%= currentUrl.includes('/barbers') ? 'active' : '' %>">
                <i class="fas fa-user-tie nav-icon"></i>
                <span>Our Barbers</span>
            </a>

            <% if (user) { %>
                <!-- Dashboard Link -->
                <% if (user.role==='admin' || user.role==='super_admin' || user.role==='manager' ) { %>
                    <a href="/admin/dashboard" class="nav-link <%= currentUrl.includes('/admin') ? 'active' : '' %>">
                        <i class="fas fa-tachometer-alt nav-icon"></i>
                        <span>Admin Dashboard</span>
                    </a>
                    <% } else { %>
                        <a href="/customer/dashboard"
                            class="nav-link <%= currentUrl.includes('/customer') ? 'active' : '' %>">
                            <i class="fas fa-tachometer-alt nav-icon"></i>
                            <span>Dashboard</span>
                        </a>
                        <% } %>

                            <!-- Book Now Button -->
                            <a href="/customer/book-appointment" class="nav-link btn-book">
                                <i class="fas fa-calendar-plus nav-icon"></i>
                                <span>Book Now</span>
                            </a>

                            <!-- User Dropdown -->
                            <div class="nav-user">
                                <div class="user-avatar">
                                    <%= user.name ? user.name.split(' ').map(n => n[0]).join('').toUpperCase() : ' U' %>
                                </div>
                                <span class="user-greeting">Hi, <%= user.name ? user.name.split(' ')[0] : ' User' %>
                                        </span>
                                <div class="user-dropdown">
                                    <a href="/customer/profile" class="dropdown-link">
                                        <i class="fas fa-user dropdown-icon"></i>
                                        <span>Profile</span>
                                    </a>
                                    <a href="/customer/appointments" class="dropdown-link">
                                        <i class="fas fa-clipboard-list dropdown-icon"></i>
                                        <span>My Appointments</span>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <form action="/auth/logout" method="POST" class="logout-form">
                                        <button type="submit" class="dropdown-link logout-btn">
                                            <i class="fas fa-sign-out-alt dropdown-icon"></i>
                                            <span>Logout</span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <% } else { %>
                                <!-- Book Now Button for Guests -->
                                <a href="/auth/register" class="nav-link btn-book">
                                    <i class="fas fa-calendar-plus nav-icon"></i>
                                    <span>Book Now</span>
                                </a>
                                <!-- Authentication Links -->
                                <div class="nav-auth">
                                    <a href="/auth/login" class="nav-link">
                                        <i class="fas fa-key nav-icon"></i>
                                        <span>Login</span>
                                    </a>
                                    <a href="/auth/register" class="nav-link btn-register">
                                        <i class="fas fa-user-plus nav-icon"></i>
                                        <span>Sign Up</span>
                                    </a>
                                </div>
                                <% } %>
        </div>

        <!-- Mobile Menu Toggle -->
        <div class="nav-toggle" id="navToggle">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
</nav>

